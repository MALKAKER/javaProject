<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffcc"
    tools:context="com.javaproject.malki.projectstepone.controller.ChooseBasicOptions">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <Button
            android:id="@+id/receiveData"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:text="@string/search"
            android:textColor="#b8b894"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="115dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/addOptions"
            android:layout_alignStart="@+id/addOptions"
            android:layout_marginTop="101dp" />
        <Spinner
            android:id="@+id/addOptions"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="62dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonshape"
            android:shadowRadius="5"
            android:spinnerMode="dialog"
            android:entries="@array/add_options"
            android:theme="@style/spinnerTheme"
            android:layout_below="@+id/receiveData" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
